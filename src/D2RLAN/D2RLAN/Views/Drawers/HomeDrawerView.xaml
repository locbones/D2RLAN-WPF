<UserControl
    x:Class="D2RLAN.Views.Drawers.HomeDrawerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:drawers="clr-namespace:D2RLAN.ViewModels.Drawers"
    xmlns:local="clr-namespace:D2RLAN.Views.Drawers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DataContext="{d:DesignInstance Type=drawers:HomeDrawerViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources />
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <UniformGrid Columns="1" Rows="2">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Background="#FF142138"
                            BorderThickness="5"
                            CornerRadius="5,5,0,0">
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.5" Color="Silver" />
                            </Border.BorderBrush>
                            <Label
                                HorizontalContentAlignment="Center"
                                Content="{Binding ModTitle}"
                                Style="{StaticResource LabelNormalStyle}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,0"
                            BorderThickness="5,0,5,5"
                            CornerRadius="0,0,5,5">
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.5" Color="Silver" />
                            </Border.BorderBrush>
                            <ScrollViewer CanContentScroll="True" MaxHeight="140" VerticalScrollBarVisibility="Auto">
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Top"
                                    Style="{StaticResource TextBlockStyleGold}"
                                    Text="{Binding ModDescription}"
                                    TextWrapping="WrapWithOverflow" />
                            </ScrollViewer>

                        </Border>
                    </Grid>

                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Background="#FF142138"
                            BorderThickness="5"
                            CornerRadius="5,5,0,0">
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.5" Color="Silver" />
                            </Border.BorderBrush>
                            <Label
                                HorizontalContentAlignment="Center"
                                Content="{Binding LauncherTitle}"
                                Style="{StaticResource LabelNormalStyle}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,0"
                            BorderThickness="5,0,5,5"
                            CornerRadius="0,0,5,5">
                            <Border.BorderBrush>
                                <SolidColorBrush Opacity="0.5" Color="Silver" />
                            </Border.BorderBrush>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Top"
                                    Style="{StaticResource TextBlockStyleGold}"
                                    Text="{Binding LauncherDescription}"
                                    TextWrapping="WrapWithOverflow" />
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </UniformGrid>

                <Grid Grid.Row="1" IsEnabled="{Binding CheckingForUpdates, Converter={StaticResource InverseBooleanConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <syncfusion:ButtonAdv
                        Grid.Column="0"
                        cm:Message.Attach="[Event Click] = [Action OnCreateMod];"
                        Background="#FF142138"
                        IconTemplate="{StaticResource AdditionIconTemplate}"
                        Label="{Binding Path=Create, Source={StaticResource Resources}}"
                        Style="{StaticResource SfButtonAdvNormalStyle}" />
                    <syncfusion:ButtonAdv
                        Grid.Column="1"
                        cm:Message.Attach="[Event Click] = [Action OnCheckForUpdates];"
                        Background="#0d2905"
                        IconTemplate="{StaticResource RefreshIconTemplate}"
                        Label="{Binding Path=Update, Source={StaticResource Resources}}"
                        Style="{StaticResource SfButtonAdvNormalStyle}" />
                    <syncfusion:ButtonAdv
                        Grid.Column="2"
                        cm:Message.Attach="[Event Click] = [Action OnPlayModAsync];"
                        Background="#0d2905"
                        IconTemplate="{StaticResource RefreshIconTemplate}"
                        Label="{Binding Path=Play, Source={StaticResource Resources}}"
                        Style="{StaticResource SfButtonAdvNormalStyle}" />
                    <syncfusion:ButtonAdv
                        Grid.Column="3"
                        cm:Message.Attach="[Event Click] = [Action OnDownloadMod];"
                        Background="#FF142138"
                        IconTemplate="{StaticResource DownloadIconTemplate}"
                        Label="{Binding Path=Download, Source={StaticResource Resources}}"
                        Style="{StaticResource SfButtonAdvNormalStyle}" />
                </Grid>

                <Grid Grid.Row="2" IsEnabled="{Binding CheckingForUpdates, Converter={StaticResource InverseBooleanConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Content="{Binding Path=TextLang, Source={StaticResource Resources}}"
                            Style="{StaticResource LabelHeaderStyle}" Margin="5,-5,5,0" />
                        <ComboBox
                            Grid.Row="1"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnTextLanguageSelectionChanged];"
                            Background="#FF313030"
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding Languages}"
                            SelectedIndex="{Binding ShellViewModel.UserSettings.TextLanguage}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />

                        <Label
                            Grid.Row="2"
                            Content="{Binding Path=AudioLang, Source={StaticResource Resources}}"
                            Style="{StaticResource LabelHeaderStyle}" Margin="5,0,5,0" />
                        <ComboBox
                            Grid.Row="3"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnAudioLanguageSelectionChanged];"
                            Background="#FF313030"
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding Languages}"
                            SelectedIndex="{Binding ShellViewModel.UserSettings.AudioLanguage}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" Margin="5,-5,5,0" />

                        <Label
                            Grid.Row="4"
                            Content="{Binding Path=AppLang, Source={StaticResource Resources}}"
                            Style="{StaticResource LabelHeaderStyle}" Margin="5,0,5,0" />
                        <ComboBox
                            Grid.Row="5"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnAppLanguageSelectionChanged];"
                            Background="#FF313030"
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding Languages}"
                            SelectedItem="{Binding SelectedAppLanguage}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" Margin="5,-5,5,0" />
                        <Label
                            Grid.Row="6"
                            Content="{Binding Path=UI, Source={StaticResource Resources}}"
                            Style="{StaticResource LabelHeaderStyle}" Margin="5,0,5,0" />
                        <ComboBox
                            Grid.Row="7"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnUIThemeSelectionChanged];"
                            Background="#FF313030"
                            DisplayMemberPath="Key"
                            IsEnabled="{Binding UiThemeEnabled}"
                            ItemsSource="{Binding UiThemes}"
                            SelectedIndex="{Binding ShellViewModel.UserSettings.UiTheme}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" Margin="5,-5,5,0" />
                    </Grid>

                    <Grid
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Content="{Binding Path=ModChoice, Source={StaticResource Resources}}"
                            FontWeight="Bold"
                            Style="{StaticResource LabelHeaderStyle}" Padding="0,0,0,0" Margin="0,0,0,0" />
                        <ComboBox
                            Grid.Row="1"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnModSelectionChanged];"
                            Background="#FF313030"
                            ItemsSource="{Binding InstalledMods}"
                            SelectedItem="{Binding SelectedMod}"
                            Style="{StaticResource ComboBoxStyle}" Padding="0,0,0,0" Margin="0,5,0,0" Height="20" />
                        <Image Grid.Row="2" Width="60" Height="60" Source="/Resources/Images/ChatGemBG.png" Grid.RowSpan="2" Margin="0,5,0,0"/>
                        <Image Grid.Row="2" Width="10" Height="10" Source="{Binding ImageSource}" Grid.RowSpan="2" Margin="0,5,0,0" cm:Message.Attach="[Event MouseLeftButtonDown] = [OnImageClick]"/>
                        <Label Grid.Row="4" Content="{Binding ImageHint}" Foreground ="#FFAE00FF" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Height="24"/>
                        <StackPanel
                            Grid.Row="5"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Label Content="Launch Mode:" Foreground ="CornflowerBlue" VerticalContentAlignment="Bottom"/>
                        </StackPanel>
                        <Grid Grid.Row="6" HorizontalAlignment="Stretch">
                            <TextBox x:Name="textBoxArgs" Text="{Binding ShellViewModel.UserSettings.CurrentD2RArgs}" TextAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="20" VerticalAlignment="Top" Background="#FF313030" FontSize="11"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Existing controls -->
                        <syncfusion:ButtonAdv
                            Grid.Row="3"
                            Width="24"
                            Height="24"
                            cm:Message.Attach="[Event Click] = [Action OnMapsHelp];"
                            Background="Transparent"
                            IconTemplate="{StaticResource QuestionMarkIconTemplate}"
                            Style="{StaticResource SfButtonAdvSmallStyle}" Margin="80,-10,5,5" />
                        <Label
                            Grid.Row="3"
                            Content="{Binding Path=Maps, Source={StaticResource Resources}}"
                            Style="{StaticResource LabelHeaderStyle}" Margin="0,-8,0,0" VerticalAlignment="Top" />
                        <ComboBox
                            Grid.Row="3"
                            VerticalAlignment="Top"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnMapLayoutSelectionChanged];"
                            Background="#FF313030"
                            BorderThickness="1"
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding MapLayouts}"
                            SelectedIndex="{Binding ShellViewModel.UserSettings.MapLayout}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" Margin="5,19,5,0" Grid.RowSpan="2" />
                        <Label Grid.Row="5" Content="Window Mode" Style="{StaticResource LabelHeaderStyle}" Margin="0,-4,0,0" VerticalAlignment="Top" />
                        <ComboBox
                            Grid.Row="6"
                            VerticalAlignment="Center"
                            cm:Message.Attach="[Event SelectionChanged] = [Action OnMapLayoutSelectionChanged];"
                            Background="#FF313030"
                            BorderThickness="1"
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding WindowMode}"
                            SelectedIndex="{Binding ShellViewModel.UserSettings.WindowMode}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" Margin="5,0,5,0" />

                        <!-- Floating Options Panel -->
                        <ToggleButton x:Name="OptionsToggle"
                            Content="Launch Options"
                            Grid.Row="1"
                            Height="35"
                            Width="120"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            OverridesDefaultStyle="True" Background="#FF460202">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <!-- Default unchecked colors -->
                                    <Setter Property="Background" Value="Red"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="FontWeight" Value="Bold"/>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#FFAA0000"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="Silver"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#FF880000"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="Gray"/>
                                                        <Setter Property="Foreground" Value="LightGray"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <Popup
                            IsOpen="{Binding IsChecked, ElementName=OptionsToggle}"
                            PlacementTarget="{Binding ElementName=OptionsToggle}"
                            Placement="Bottom"
                            StaysOpen="False"
                            AllowsTransparency="True"
                            HorizontalOffset="-25"
                            PopupAnimation="Slide">
                            <Border Background="#FF2D2D30" BorderBrush="Silver" BorderThickness="1" CornerRadius="5">
                                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="5">
                                        <CheckBox Content="{Binding Path=HDR, Source={StaticResource Resources}}" IsChecked="{Binding ShellViewModel.UserSettings.HdrFix}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <CheckBox HorizontalAlignment="Center" cm:Message.Attach="[Event Checked] = [Action OnMapRegenChecked]; [Event Unchecked] = [Action OnMapRegenChecked];" Content="{Binding Path=Regen, Source={StaticResource Resources}}" IsChecked="{Binding ShellViewModel.UserSettings.ResetMaps}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <CheckBox HorizontalAlignment="Center" cm:Message.Attach="[Event Checked] = [Action OnMapRegenChecked]; [Event Unchecked] = [Action OnMapRegenChecked];" Content="{Binding Path=Respec, Source={StaticResource Resources}}" IsChecked="{Binding ShellViewModel.UserSettings.InfiniteRespec}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <CheckBox HorizontalAlignment="Center" Content="Cheats" IsChecked="{Binding ShellViewModel.UserSettings.Cheats}" IsEnabled="{Binding ShellViewModel.UserSettings.CheatsActive}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <CheckBox HorizontalAlignment="Center" Content="Overlay Fix" IsChecked="{Binding ShellViewModel.UserSettings.MSIFix}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <syncfusion:ButtonAdv Width="24" Height="24" cm:Message.Attach="[Event Click] = [Action OnMSIFixHelp];" Background="Transparent" IconTemplate="{StaticResource QuestionMarkIconTemplate}" Style="{StaticResource SfButtonAdvSmallStyle}" Margin="125,-25,5,5" />

                                        <CheckBox Content="No Sound" cm:Message.Attach="[Event Checked] = [Action OnMapRegenChecked]; [Event Unchecked] = [Action OnMapRegenChecked];" IsChecked="{Binding ShellViewModel.UserSettings.NoSound}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <CheckBox Content="Skip Logo Videos" cm:Message.Attach="[Event Checked] = [Action OnMapRegenChecked]; [Event Unchecked] = [Action OnMapRegenChecked];" IsChecked="{Binding ShellViewModel.UserSettings.SkipLogos}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                        <CheckBox Content="Use Lowend Sprites" cm:Message.Attach="[Event Checked] = [Action OnMapRegenChecked]; [Event Unchecked] = [Action OnMapRegenChecked];" IsChecked="{Binding ShellViewModel.UserSettings.ForceLowend}" Style="{StaticResource CheckBoxStyle}" Margin="5,2"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>
                <Grid
                    Grid.Row="3"
                    Margin="5"
                    d:Visibility="Visible"
                    Visibility="{Binding CheckingForUpdates, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Content="{Binding ProgressStatus}"
                        Style="{StaticResource LabelHeaderStyle}" />

                    <syncfusion:SfLinearProgressBar
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="25"
                        d:Progress="70"
                        IsIndeterminate="{Binding ProgressBarIsIndeterminate}"
                        Progress="{Binding DownloadProgress}"
                        Style="{StaticResource SfLinearProgressBarStyle}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding DownloadProgressString}"
                        Foreground="DodgerBlue" />
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
