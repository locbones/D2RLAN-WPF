<Window
    x:Class="D2RLAN.Views.Dialogs.ProgressBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:D2RLAN.ViewModels.Dialogs"
    xmlns:local="clr-namespace:D2RLAN.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="288"
    Height="120"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    Title="Verifying Data..."
    d:DataContext="{d:DesignInstance Type=dialogs:ProgressBarViewModel, IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Grid>
        <Image Source="pack://application:,,,/Resources/Images/StashSettingsBackground.png" Stretch="Fill" />

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label 
                Grid.Row="0" 
                Foreground="Goldenrod"
                Style="{StaticResource LabelNormalStyle}"
                Content="{Binding ProgressText, Mode=OneWay}"
                HorizontalAlignment="Center"
                Margin="0,0,0,5"/>

            <ProgressBar 
                Grid.Row="1"
                Height="20"
                HorizontalAlignment="Stretch"
                Minimum="0"
                Maximum="100"
                Value="{Binding ProgressValue, Mode=OneWay}"
                Margin="0,0,0,5"/>
        </Grid>
    </Grid>
</Window>
